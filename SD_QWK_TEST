def_rec<17,DF_DATA_TYPE> = "QC"
def_rec<17,DF_FONT_STYLE,DF_FONT_COLOR > = "000000FF" ;* blue
*
IX = 18
def_rec<IX,DF_ITEM_NAME> = "SHEET2"
def_rec<IX,DF_CELL_REF> = "A1"
